<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

  <Button
      android:id="@+id/adminbutton"
      android:layout_width="223dp"
      android:layout_height="58dp"
      android:fontFamily="@font/alegreya_sc_bold"
      android:text="Admin Login"
      android:textColor="#FFFFFF"
      android:textColorHighlight="#D81414"
      android:textSize="18sp"
      app:backgroundTint="#F44336"
      android:onClick="btn_showDialog"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.468"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.392" />

  <Button
      android:id="@+id/studbutton"
      android:layout_width="223dp"
      android:layout_height="58dp"
      android:fontFamily="@font/alegreya_sc_bold"
      android:text="Student Login"
      android:textColor="#FFFFFF"
      android:textColorHighlight="#D81414"
      android:textSize="18sp"
      app:backgroundTint="#F44336"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.465"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.827" />

  <ImageView
      android:id="@+id/adminimg"
      android:layout_width="226dp"
      android:layout_height="154dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.475"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.145"
      app:srcCompat="@drawable/adminlogin" />

  <ImageView
      android:id="@+id/studimg"
      android:layout_width="226dp"
      android:layout_height="154dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.481"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.655"
      app:srcCompat="@drawable/studentlogin" />
</androidx.constraintlayout.widget.ConstraintLayout>